{
  "name": "@nord-clan/eslint-plugin",
  "version": "0.0.8",
  "description": "TypeScript plugin for ESLint",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "index.d.ts",
    "package.json",
    "readme.md"
  ],
  "keywords": [
    "eslint",
    "eslintplugin",
    "eslint-plugin",
    "typescript"
  ],
  "engines": {
    "node": ">=16.19.0",
    "npm": "please use yarn or pnpm",
    "yarn": ">=1",
    "pnpm": ">=7"
  },
  "bugs": {
    "url": "https://github.com/nord-clan/eslint-plugin/issues"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --pretty --transpile-only -r tsconfig-paths/register src/index.ts",
    "test": "jest --config=./jest.config.ts --runInBand",
    "test:watch": "jest --watch --config=./jest.config.ts",
    "test:coverage": "jest -i --coverage --config=./jest.config.ts",
    "build": "tsc -b tsconfig.production.json",
    "clean": "tsc -b tsconfig.production.json --clean",
    "lint": "eslint \"./**/*.{ts,tsx}\" --quiet --cache --cache-strategy content --cache-location .eslintcache/",
    "format": "prettier -c \"./**/*.{ts,json,md}\"",
    "format:fix": "prettier -w \"./**/*.{ts,json,md}\"",
    "prepare": "husky install .husky",
    "postclean": "rimraf dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@jest/types": "^29.3.1",
    "@types/dedent": "^0.7.0",
    "@types/node": "^18.11.18",
    "@typescript-eslint/parser": "^5.48.1",
    "@typescript-eslint/utils": "^5.48.1",
    "dedent": "^0.7.0",
    "eslint": "8.31.0",
    "eslint-plugin-eslint-plugin": "^5.0.7",
    "husky": "^8.0.3",
    "jest": "^29.3.1",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.2",
    "rimraf": "^3.0.2",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.1.2",
    "typescript": "^4.9.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.+(js|jsx|ts|tsx)": [
      "eslint --fix"
    ],
    "src/**/*.+(js|jsx|ts|tsx|json|scss|md)": [
      "prettier --write",
      "prettier -c"
    ]
  }
}
