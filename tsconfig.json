{
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "outDir": "./dist",

    "baseUrl": ".",
    "paths": {
      "#/*": ["./src/*"]
    }
  },
  "exclude": ["./node_modules/**/*"]
}
